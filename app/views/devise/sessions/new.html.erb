<div class="container device">
  <div class="regist-frame">
    <p class-"my-4">ログイン</p>
    <div class="regist-inner">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-row">
          <div class="col-2 required-b pt-2"></div>
          <%= f.email_field :email, autocomplete: "email", class: "form-control col-10 px-2", placeholder: "メールアドレス" %>
        </div>

        <div class="field form-row">
          <div class="col-2 required-b pt-2"></div>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-10 px-2", placeholder: "パスワード" %>
        </div>
      <!--
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      -->
        <div class="actions">
          <%= f.submit "ログイン", class: "form-control btn-primary my-4 hover-opacity" %>
        </div>
      <% end %>
      <%= link_to "新しいアカウントを作成", new_user_registration_path, class: "hover-opacity" %><br>
    </div>
  </div>
</div>
