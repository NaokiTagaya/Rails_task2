<div class="container-fiuld property-posts">
	<h4 class="pb-4">登録済みルーム一覧</h4>
	<table>
	<thead>
		<tr align="center">
			<th>ルーム画像</th>
			<th>ルーム名</th>
			<th>ルーム紹介</th>
			<th>料金</th>
			<th>作成日</th>
		</tr>
	</thead>
	<tbody>
	<% @posts.each do |p| %>
		<tr>
			<td>
				<%= link_to image_tag(p.room_image.url, class:"room-posts-image"), property_path(id: p.id) %>
			</td>
			<td class="posts-name">
				<%= link_to "#{p.room_name}", property_path(id: p.id) %>
			</td>
			<td class="posts-content">
				<%= p.room_introduction %>
			</td>
			<td class="price-icon">
				<%= p.fee %>
			</td>
			<td>
				<%= l p.created_at %> 
			</td>
		</tr>
	<% end %>
	</tbody>
	</table>
</div>